# Infrastructure Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to Git!

# ============================================================================
# AWS Configuration
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1

# ============================================================================
# Stack Configuration
# ============================================================================
STACK_NAME_PREFIX=visa-b2b
ENVIRONMENT=dev

# ============================================================================
# VPC Configuration
# ============================================================================
VPC_CIDR=10.0.0.0/16
VPC_MAX_AZS=2

# ============================================================================
# Database Configuration
# ============================================================================
DB_NAME=visa_b2b_payments
DB_USERNAME=postgres
DB_PASSWORD=your_secure_database_password_min_16_chars
DB_PORT=5432
DB_INSTANCE_TYPE=db.t3.micro
DB_ALLOCATED_STORAGE=20
DB_BACKUP_RETENTION_DAYS=7

# ============================================================================
# Lambda Configuration
# ============================================================================
LAMBDA_MEMORY_SIZE=512
LAMBDA_TIMEOUT=30
LAMBDA_RUNTIME=nodejs18.x
PYTHON_LAMBDA_RUNTIME=python3.9

# ============================================================================
# S3 Bucket Configuration
# ============================================================================
INVOICE_BUCKET_NAME=visa-b2b-invoices-${AWS_ACCOUNT_ID}
GOODS_RECEIPT_BUCKET_NAME=visa-b2b-goods-receipts-${AWS_ACCOUNT_ID}
DOCUMENT_BUCKET_NAME=visa-b2b-documents-${AWS_ACCOUNT_ID}

# ============================================================================
# API Gateway Configuration
# ============================================================================
API_GATEWAY_STAGE=prod
API_THROTTLE_RATE_LIMIT=1000
API_THROTTLE_BURST_LIMIT=2000

# ============================================================================
# KMS Configuration
# ============================================================================
KMS_KEY_ALIAS=alias/visa-b2b-payments
ENABLE_KMS_ENCRYPTION=true

# ============================================================================
# Visa B2B Stub API Configuration
# ============================================================================
VISA_STUB_API_NAME=visa-b2b-stub-api
VISA_STUB_STAGE=v1

# ============================================================================
# AgentCore Gateway Configuration
# ============================================================================
GATEWAY_NAME=visa-b2b-payment-gateway
GATEWAY_DESCRIPTION=Visa B2B Payment Gateway for MCP integration
BEDROCK_REGION=us-east-1

# ============================================================================
# Payment Agent Configuration
# ============================================================================
PAYMENT_AGENT_NAME=visa-b2b-payment-agent
PAYMENT_AGENT_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
PAYMENT_AGENT_DESCRIPTION=AI-powered payment decision agent

# ============================================================================
# AgentCore Invoker Configuration
# ============================================================================
INVOKER_FUNCTION_NAME=agentcore-invoker
INVOKER_MEMORY_SIZE=512
INVOKER_TIMEOUT=60

# ============================================================================
# CloudWatch Configuration
# ============================================================================
LOG_RETENTION_DAYS=7
ENABLE_DETAILED_LOGGING=true
LOG_LEVEL=INFO

# ============================================================================
# Monitoring & Alarms
# ============================================================================
ENABLE_ALARMS=true
ALARM_EMAIL=your-email@example.com

# ============================================================================
# Tags (for resource organization)
# ============================================================================
PROJECT_TAG=visa-b2b-payment-integration
OWNER_TAG=your-team-name
COST_CENTER_TAG=your-cost-center
ENVIRONMENT_TAG=development

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_VISA_B2B_INTEGRATION=true
ENABLE_ISO20022_GENERATION=true
ENABLE_3WAY_MATCHING=true
ENABLE_SUPPLIER_PORTAL=true

# ============================================================================
# Security Configuration
# ============================================================================
ENABLE_WAF=false
ENABLE_SHIELD=false
ENABLE_GUARDDUTY=false

# ============================================================================
# Backup Configuration
# ============================================================================
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=30
BACKUP_WINDOW=03:00-04:00
MAINTENANCE_WINDOW=sun:04:00-sun:05:00

# ============================================================================
# Cost Optimization
# ============================================================================
ENABLE_AUTO_SCALING=true
MIN_CAPACITY=1
MAX_CAPACITY=10

# ============================================================================
# Development Settings
# ============================================================================
ENABLE_DEBUG_MODE=false
SKIP_RESOURCE_DELETION_PROTECTION=true
ENABLE_XRAY_TRACING=false

# ============================================================================
# CDK Bootstrap
# ============================================================================
CDK_QUALIFIER=hnb659fds
BOOTSTRAP_STACK_VERSION_SSM_PARAMETER=/cdk-bootstrap/hnb659fds/version

# ============================================================================
# Notes
# ============================================================================
# 1. Copy this file to .env.local before deployment
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit .env.local to version control
# 4. Use AWS Secrets Manager for production secrets
# 5. Rotate credentials regularly
# 6. Different values for dev, staging, and production environments
